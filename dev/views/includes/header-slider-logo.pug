// image slider start
.slider__container
    .slider
        .slides
            // radio buttons start
            input#radio1(type='radio' name='radio-btn')
            input#radio2(type='radio' name='radio-btn')
            input#radio3(type='radio' name='radio-btn')
            input#radio4(type='radio' name='radio-btn')
            // radio buttons end
            // slide images start
            .slide.first
                img(src='assets/img/slider/1.jpg' alt='colegio intay')
            .slide
                img(src='assets/img/slider/2.jpg' alt='aviso intay')
            .slide
                img(src='assets/img/slider/3.jpg' alt='actividades jfi')
            .slide
                img(src='assets/img/slider/4.jpg' alt='peronal ie')
            // slide images end
            // automatic navigation start
            .navigation-auto
                .auto-btn1
                .auto-btn2
                .auto-btn3
                .auto-btn4
            // automatic navigation end
            // manual navigation start
        .navigation-manual
            label.manual-btn(for='radio1')
            label.manual-btn(for='radio2')
            label.manual-btn(for='radio3')
            label.manual-btn(for='radio4')
            // manual navigation end